<div style="background-image: url(@cocktail.image);">

</div>

<h1>Add a dose to <%= @cocktail.name %></h1>
<p>Find me in app/views/doses/new.html.erb</p>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.button :submit %>
<% end %>

<%= link_to 'Back to index', cocktails_path %>
