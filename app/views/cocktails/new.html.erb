<h1>Create a new cocktail</h1>
<p>Input the name of the cocktail and a picture</p>
<%= simple_form_for @cocktail do |f| %>
  <%= f.input :name %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Add the cocktail to the list!", class: "btn btn-primary" %>
<% end %>
<%= link_to 'Back to cocktail list', cocktails_path %>

